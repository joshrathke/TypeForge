{
  "name": "nomad-total-command-om",
  "version": "1.0.0",
  "description": "Nomad Total Command Operations Center gives Nomad Support Engineers the ability to oversee operations throughout the entire NTC fleet.",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "build-clean": "rm -r build && tsc",
    "install-all": "npm install && cd ./client && npm install",
    "test": "concurrently -k -p \"[{name}]\" -n \"Redis,Mocha\" -c \"yellow.bold,green.bold\" \"redis-server\" \"nyc mocha -r ts-node/register server/**/*.spec.ts\"",
    "start": "concurrently -k -p \"[{name}]\" -n \"Redis,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"redis-server\" \"tsc -w\" \"nodemon --delay 3 build/index.js\""
  },
  "author": "Josh Rathke",
  "license": "MIT",
  "dependencies": {
    "class-validator": "^0.8.5",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "password-generator": "^2.2.0",
    "pg": "^7.4.3",
    "socket.io": "^2.1.1",
    "socket.io-redis": "^5.2.0"
  },
  "devDependencies": {
    "@angular/cli": "^6.0.8",
    "@types/chai": "^4.1.4",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.4",
    "@types/morgan": "^1.7.35",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^3.2.0",
    "@types/socket.io": "^1.4.36",
    "@types/socket.io-redis": "^1.0.25",
    "chai": "^4.1.2",
    "concurrently": "^3.6.0",
    "mocha": "^5.2.0",
    "morgan": "^1.9.0",
    "nodemon": "^1.17.5",
    "nyc": "^12.0.2",
    "sinon": "^6.1.0",
    "sinon-chai": "^3.2.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^7.0.0",
    "typeorm": "^0.2.7",
    "typescript": "^2.9.2"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "./server/**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
